    <script>
        let number = [ 4,5,23,55,11,66,47,1,3,32];
        let maxnb = number[0];
        let indexnb = 0;
        for ( i = 0 ; i < number.length; i++){
            if ( number[i] > maxnb){
                maxnb= number[i]
                indexnb=i
            }
        }console.log("số lớn nhất là " + maxnb)
        console.log(" vị trí số lớn nhất là " + indexnb)

    </script>
